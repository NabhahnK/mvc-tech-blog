<!-- Loop over each object in the projects array -->
<div class="new-post-form">
        <h1 class="content-subhead">Top Post!</h1>

{{#each posts as |post| }}
<div class="post">
  <div class="">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <a href="#">{{commentLength}}</a>
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
</div>
  {{/each}}