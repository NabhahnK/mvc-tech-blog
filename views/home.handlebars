<!-- Loop over each object in the projects array -->
<div class="new-post-form">
  <h1 class="content-subhead">Top Post!</h1>

  {{#each posts as |post| }}
  <div class="post row">
    <div class="col" style="background-color: #808080;">
      <h2 style="background-color:#63666A;" data-postID="{{post.id}}">
        <a href="/post/{{post.id}}">{{post.title}}</a>
      </h2>
      <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
    </div>
  </div>
  {{/each}}