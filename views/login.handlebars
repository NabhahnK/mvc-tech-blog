<div class="container">
  <h3>Login</h3>

  <form class="login-form">
    <div class="mb-3 form-group">
      <label for="email-login" class="form-label">Email</label>
      <input type="email" class="form-control" id="email-login" placeholder="Email">
    </div>
    <div class="mb-3 form-group">
      <label for="password-login" class="form-label">Password</label>
      <input type="password" class="form-control" id="password-login" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary">Sign In!</button>
  </form>
</div>


<div class="container">
  <h3>Sign Up!</h3>

    <form class="signup-form">
    <div class="mb-3 form-group">
      <label for="name-signup" class="form-label">Name:</label>
      <input type="text" class="form-control form-input" id="name-signup">
    </div>
    <div class="mb-3 form-group">
      <label for="email-signup" class="form-label">Email:</label>
      <input type="email" class="form-control" id="email-signup" placeholder="Email">
    </div>
    <div class="mb-3 form-group">
      <label for="password-signup" class="form-label">Password:</label>
      <input type="password" class="form-control" id="password-signup" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary">Sign Up!</button>
  </form>
</div>

<script src="/js/login.js"></script>