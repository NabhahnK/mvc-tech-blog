<div class="container">
  <h3>Login</h3>
  <form class="login-form">
    <div class="form-group">
      <label for="email-login">Email</label>
      <input type="email" id="email-login" placeholder="Email" />
      <span class="">This is a required field.</span>
      <label for="password-login">Password</label>
      <input type="password" id="password-login" placeholder="Password" />
      <label for="stacked-remember" class="pure-checkbox">
        <input type="checkbox" id="stacked-remember" /> Remember me
      </label>
      <button type="submit" class="">Sign in</button>
  </form>
</div>
</div>

<div class="container">
  <h3>Sign Up!</h3>
  <form class="signup-form">
    <div class="form-group">
      <label for="name-signup">Name:</label>
      <input class="form-input" type="text" id="name-signup" />
    </div>
    <label for="email-signup">Email</label>
    <input type="email" id="email-signup" placeholder="Email" />
    <span class="">This is a required field.</span>
    <label for="password-signup">Password</label>
    <input type="password" id="password-signup" placeholder="Password" />
    <button type="submit" class="">Sign Up!</button>
  </form>
</div>
</div>
<script src="/js/login.js"></script>